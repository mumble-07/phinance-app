          <% if user_signed_in? %>
            <button type="button" class="btn btn-primary", id = "btn-cta"><%= link_to 'DASHBOARD',user_dashboard_path %></button>
            <% else %>
            <button type="button" class="btn btn-primary", id = "btn-cta"><%= link_to 'GET STARTED', new_user_registration_path %></button>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-lg-6 hero-img">
          <%= image_tag("bg1.png", :alt => "PHinance.io header image", :class => "home_page_image") %>
      </div>
    </div>
  </div>
</section>
</div>

