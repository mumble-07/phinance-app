<%= form_with scope: :main_book, url: update_mainbook_path, model: @main_book, method: :put, :local => true do |f| %>

  <% if @main_book.errors.any? %>
    <ul>
      <% @main_book.errors.full_messages.each do |error_message| %>
        <li><%= error_message %></li>
      <% end %>
    </ul>
  <% end %>

<div id = "book__entry__form">
  <h1 id ="mainbook__entry">Create Mainbook Entry</h1>
<div class="field", id = "book_entry_field">
  <div id = "book_field_label"><%= f.label :"Entry Date" %></div>
  <div id = "book_field_input"><%= f.date_field :date_mainb, :required => true %></div>
</div>

<div class="field", id = "book_entry_field">
  <div id = "book_field_label"><%= f.label :"Description"%></div>
  <div id = "book_field_input"><%= f.text_field :mainbook_description, autofocus: true, placeholder: "Description", :required => true %></div>
</div>

<div class="field", id = "book_entry_field">
  <div id = "book_field_label"><%= f.label :"or-vat-reg-tin"%></div>
  <div id = "book_field_input"><%= f.text_field :or_vat_reg_tin_mainb, placeholder: "OR VAT-REG-TIN" %></div>
</div>

<div class="field", id = "book_entry_field">
  <div id = "book_field_label"><%= f.label :"DEBIT (+)"%></div>
  <div id = "book_field_input"><%= f.number_field :debit_mainb, placeholder: "DEBIT (+)", step: :any, value: '00.0' %></div>
</div>

<div class="field", id = "book_entry_field">
  <div id = "book_field_label"><%= f.label :"CREDIT (-)"%></div>
  <div id = "book_field_input"><%= f.number_field :credit_mainb, placeholder: "CREDIT (-)", step: :any, value: '00.0' %></div>
</div>

 <div class="field", id = "book_entry_field">
  <div id = "book_field_label"><%= f.number_field :user_id, id: :main_book_user_id, value: current_user.id, readonly: true, type: :hidden %></div>
</div>
</div>

<div id = "entry_submit_button_cont">
  <button class="btn", id= "entry_submit_button"><%= link_to "Back", mainbook_entries_path %></button>
  <%= f.submit :"Update", class: 'btn', id: "entry_submit_button" %>
</div>

<% end %>
